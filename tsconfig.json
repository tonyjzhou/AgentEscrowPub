{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["typechain-types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./utils/**/*.ts",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
